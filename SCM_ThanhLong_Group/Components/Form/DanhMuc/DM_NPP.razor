@page "/danhmucnhaphanphoi"
@rendermode InteractiveServer
@inject NhaPhanPhoi_Service NhaPhanPhoi_Service
@using SCM_ThanhLong_Group.Model
@inject IToastService ToastService

<h2 style="text-align:center;font-weight:bold">Danh mục nhà phân phối</h2>
<button class="btn btn-success" @onclick="OpenAddModal" style="margin-bottom:10px">
    <span class="oi oi-plus" aria-hidden="true">Thêm nhà phần phối mới</span>
</button>

@if (dataList == null)
{
    <p><em>Loading......</em></p>
}
else
{
    <TelerikGrid Data="@dataList" Pageable="true" Sortable="true" Height="calc(100vh - 170px)" Resizable="true" Reorderable="true" Class="telerik-grid">
        <GridColumns>
            <GridColumn Field="@nameof(NhaPhanPhoi.MaNhaPhanPhoi)" Title="Mã nhà phân phối" Width="100px" />
            <GridColumn Field="@nameof(NhaPhanPhoi.TenNhaPhanPhoi)" Title="Tên nhà phân phối" Width="100px" />
            <GridColumn Field="@nameof(NhaPhanPhoi.DiaChi)" Title="Địa chỉ" Width="100px" />
            <GridColumn Field="@nameof(NhaPhanPhoi.SoDienThoai)" Title="Số điện thoại" Width="100px" />
            <GridCommandColumn Width="180px">
                <GridCommandButton Command="Edit" OnClick="@EditItem">
                    <span class="oi oi-pencil" Width="100px"></span> Sửa
                </GridCommandButton>
                <GridCommandButton Command="Delete" OnClick="@DeleteItem">
                    <span class="oi oi-trash" Width="100px"></span> Xóa
                </GridCommandButton>
            </GridCommandColumn>
        </GridColumns>
    </TelerikGrid>
}

<div class="modal fade @addModalClass" tabindex="-1" role="dialog" style="@addModalDisplayStyle">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header" style="background:#2f8f3a; color:beige">
                <h5 class="modal-title"><b>Thêm nhà phân phối mới</b></h5>
                <button type="button" class="close" @onclick="CloseAddModal" aria-label="Close">
                    <span aria-hidden="true">&times</span>
                </button>
            </div>
            <div class="modal-body" style="background:#e5d2b8; color:brown">
               <EditForm Model="@nhaPhanPhoi" OnValidSubmit="createNhaPhanPhoi">
                    <DataAnnotationsValidator />
                    <div class="form-group">
                        <label for="MaNhaPhanPhoi" class="control-label"><b>Mã nhà phân phối: </b></label>
                        <InputText class="form-control" @bind-Value=@nhaPhanPhoi.MaNhaPhanPhoi />
                        <ValidationMessage For="@(() => nhaPhanPhoi.MaNhaPhanPhoi)" />
                    </div>
                    <div class="form-group">
                        <label for="TenKhuVuc" class="control-label"><b>Tên nhà phân phối: </b></label>
                        <InputText class="form-control" @bind-Value=@nhaPhanPhoi.TenNhaPhanPhoi />
                        <ValidationMessage For="@(() => nhaPhanPhoi.TenNhaPhanPhoi)" />
                    </div>
                    <div class="form-group">
                        <label for="DiaChi" class="control-label"><b>Địa chỉ: </b></label>
                        <InputText class="form-control" @bind-Value=@nhaPhanPhoi.DiaChi />
                    </div>
                    <div class="form-group">
                        <label for="SoDienThoai" class="control-label"><b>Số điện thoại: </b></label>
                        <InputText class="form-control" @bind-Value=@nhaPhanPhoi.SoDienThoai />
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Thêm nhà phân phối</button>
                        <button type="button" class="btn btn-secondary" @onclick="CloseAddModal">Đóng</button>
                    </div>
               </EditForm>
            </div>
        </div>
    </div>
</div>

<div class="modal fade @editModalClass" tabindex="-1" role="dialog" style="@editModalDisplayStyle">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header" style="background:#2f8f3a; color:beige">
                <h5 class="modal-title"><b>Cập nhật nhà phân phối</b></h5>
                <button type="button" class="close" @onclick="CloseEditModal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" style="background:#e5d2b8; color:brown">
                <EditForm Model="@nhaPhanPhoi" OnValidSubmit="updateNhaPhanPhoi">
                    <DataAnnotationsValidator />
                    <div class="form-group">
                        <label for="MaNhaPhanPhoi" class="control-label"><b>Mã nhà phân phối: </b></label>
                        <InputText class="form-control" @bind-Value=@nhaPhanPhoi.MaNhaPhanPhoi />
                        <ValidationMessage For="@(() => nhaPhanPhoi.MaNhaPhanPhoi)" />
                    </div>
                    <div class="form-group">
                        <label for="TenNhaPhanPhoi" class="control-label"><b>Tên nhà phân phối: </b></label>
                        <InputText class="form-control" @bind-Value=@nhaPhanPhoi.TenNhaPhanPhoi />
                        <ValidationMessage For="@(() => nhaPhanPhoi.TenNhaPhanPhoi)" />
                    </div>
                    <div class="form-group">
                        <label for="DiaChi" class="control-label"><b>Địa chỉ: </b></label>
                        <InputText class="form-control" @bind-Value=@nhaPhanPhoi.DiaChi />
                    </div>
                    <div class="form-group">
                        <label for="SoDienThoai" class="control-label"><b>Số điện thoại: </b></label>
                        <InputText class="form-control" @bind-Value=@nhaPhanPhoi.SoDienThoai />
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Cập nhật nhà phân phối</button>
                        <button type="button" class="btn btn-secondary" @onclick="CloseEditModal">Đóng</button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
</div>

<div class="modal fade @deleteModalClass" tabindex="-1" role="dialog" style="@deleteModalDisplayStyle">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header" style="background:#2f8f3a; color:beige">
                <h5 class="modal-title"><b>Xóa nhà phân phối</b></h5>
                <button type="button" class="close" @onclick="CloseDeleteModal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" style="background:#e5d2b8; color:brown; font-size:30px">
                <p style="color:red">Bạn có chắc chắn muốn xóa khu vực này không?</p>
                <EditForm Model="@nhaPhanPhoi" OnValidSubmit="deleteNhaPhanPhoi">
                    <DataAnnotationsValidator />
                    <div class="form-group">
                        <label for="MaNhaPhanPhoi" class="control-label">Mã nhà phân phối: </label>
                        <label><b>@nhaPhanPhoi.MaNhaPhanPhoi</b></label>
                    </div>
                    <div class="form-group">
                        <label for="TenNhaPhanPhoi" class="control-label">Tên nhà phân phối: </label>
                        <label><b>@nhaPhanPhoi.TenNhaPhanPhoi</b></label>
                    </div>
                    <div class="form-group">
                        <label for="DiaChi" class="control-label">Địa chỉ: </label>
                        <label><b>@nhaPhanPhoi.DiaChi</b></label>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Xóa khu vực trồng</button>
                        <button type="button" class="btn btn-secondary" @onclick="CloseDeleteModal">Đóng</button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
</div>

@code {
    private List<NhaPhanPhoi> dataList = new List<NhaPhanPhoi>();
    private NhaPhanPhoi nhaPhanPhoi = new NhaPhanPhoi();

    private string addModalClass = "";
    private string addModalDisplayStyle = "display:none";
    private string editModalClass = "";
    private string editModalDisplayStyle = "display:none";
    private string deleteModalClass = "";
    private string deleteModalDisplayStyle = "display:none";

    private string maNhaPhanPhoi;
    private string tenNhaPhanPhoi;

    protected override async Task OnInitializedAsync()
    {
        dataList = await NhaPhanPhoi_Service.getAllData();
    }

    private void OpenAddModal()
    {
        nhaPhanPhoi = new NhaPhanPhoi();
        addModalClass = "show";
        addModalDisplayStyle = "display:block";
    }

    private void CloseAddModal()
    {
        addModalClass = "";
        addModalDisplayStyle = "display:none";
        StateHasChanged();
    }

    private void OpenEditModal(NhaPhanPhoi item)
    {
        nhaPhanPhoi = item.ShallowCopy();
        maNhaPhanPhoi = item.MaNhaPhanPhoi;
        tenNhaPhanPhoi = item.TenNhaPhanPhoi;
        editModalClass = "show";
        editModalDisplayStyle = "display:block";
    }

    private void CloseEditModal()
    {
        editModalClass = "";
        editModalDisplayStyle = "display:none";
        StateHasChanged();
    }

    private void OpenDeleteModal(NhaPhanPhoi item)
    {
        nhaPhanPhoi = item;
        deleteModalClass = "show";
        deleteModalDisplayStyle = "display:block";
    }

    private void CloseDeleteModal()
    {
        deleteModalClass = "";
        deleteModalDisplayStyle = "display:none";
        StateHasChanged();
    }

    protected async Task createNhaPhanPhoi()
    {
        if (await NhaPhanPhoi_Service.isMaNhaPhanPhoiExist(nhaPhanPhoi, dataList, "ORACLE"))
        {
            ToastService.ShowError("Mã nhà phân phối đã tồn tại!");
        }
        else if (await NhaPhanPhoi_Service.isTenNhaPhanPhoiExist(nhaPhanPhoi, dataList, "ORACLE"))
        {
            ToastService.ShowError("Tên nhà phân phối đã tồn tại!");
        }
        else
        {
            try
            {
                await NhaPhanPhoi_Service.addData(nhaPhanPhoi);
                dataList = await NhaPhanPhoi_Service.getAllData();
                CloseAddModal();
                ToastService.ShowSuccess("Thêm nhà phân phối thành công!");
                StateHasChanged();
            }
            catch (Exception)
            {
                ToastService.ShowError("Có lỗi xảy ra!");
            }
        }
    }

    protected async Task updateNhaPhanPhoi()
    {
        if (await NhaPhanPhoi_Service.isMaNhaPhanPhoiExist(nhaPhanPhoi, dataList, maNhaPhanPhoi))
        {
            ToastService.ShowError("Mã nhà phân phối đã tồn tại!");
        }
        else if (await NhaPhanPhoi_Service.isTenNhaPhanPhoiExist(nhaPhanPhoi, dataList, tenNhaPhanPhoi))
        {
            ToastService.ShowError("Tên nhà phân phối đã tồn tại!");
        }
        else
        {
            try
            {
                await NhaPhanPhoi_Service.updateData(nhaPhanPhoi);
                dataList = await NhaPhanPhoi_Service.getAllData();
                CloseEditModal();
                ToastService.ShowSuccess("Cập nhật nhà phân phối thành công!");
                StateHasChanged();
            }
            catch (Exception)
            {
                ToastService.ShowError("Có lỗi xảy ra!");
            }
        }
    }

    protected async Task deleteNhaPhanPhoi()
    {
        try
        {
            await NhaPhanPhoi_Service.deleteData(nhaPhanPhoi.Auto_ID.ToString());
            dataList = await NhaPhanPhoi_Service.getAllData();
            CloseDeleteModal();
            ToastService.ShowSuccess("Xóa nhà phân phối thành công!");
            StateHasChanged();
        }
        catch (Exception)
        {
            ToastService.ShowError("Có lỗi xảy ra!");
        }
    }

    private void EditItem(GridCommandEventArgs args)
    {
        var item = (NhaPhanPhoi)args.Item;
        OpenEditModal(item);
    }

    private void DeleteItem(GridCommandEventArgs args)
    {
        var item = (NhaPhanPhoi)args.Item;
        OpenDeleteModal(item);
    }

}

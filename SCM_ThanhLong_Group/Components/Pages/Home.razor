@page "/Home"
@* @using SCM_ThanhLong_Group.Components.Layout *@
@rendermode InteractiveServer
@inject IToastService toastService

@inject NavigationManager Navigation

<style>
    .hero {
        background-image: url('../images/bghome1.jpg');
        background-size: cover;
        background-attachment: fixed;
        background-position: center;
        height: 88vh;
        max-width:100%;
        align-items: center;
        justify-content: center;
        position: relative;
        overflow: hidden;
        color: purple;
        text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.5);
        margin: 72px;   }
    h1{
        font-family:'Berlin Sans FB';
        font-size: 50px;
        color: #FFCC00;
    }
</style>


<PageTitle>Home</PageTitle>
<div class="hero">
    <div class="hero-content">
        <h1 style="animation: bounce 2s infinite;">Quản Lý Cung Ứng Thanh Long</h1>
        <button class="btn btn-primary call-to-action" @onclick="ShowToast">Tìm hiểu thêm</button>
    </div>
</div>


